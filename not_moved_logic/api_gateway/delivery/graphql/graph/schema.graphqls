directive @goField(forceResolver: Boolean) on FIELD_DEFINITION

type Category {
    id: ID!
    name: String!
    image_url: String
    parent_id: String
    depth: Int!
    children: [Category!] @goField(forceResolver: true)
}

input CreateCategoryInput {
    name: String!
    image_url: String
    parent_id: String
}

type Query {
    listCategories(parentId: ID): [Category!]!
}

type Mutation {
    createCategory(input: CreateCategoryInput!): Category!
}